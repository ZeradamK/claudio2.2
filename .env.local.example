# Cohere API Key - Required for Jarvis AI Assistant
# Get your API key from https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=command-r-plus

# Performance Settings
# Controls the maximum tokens and streaming behavior
MAX_RESPONSE_TOKENS=2048
ENABLE_STREAMING=true

# Debugging Settings
# Set to true to enable detailed logging
DEBUG_JARVIS=false
DEBUG_INTENT_DETECTION=false
DEBUG_PROMPTS=false

# OpenAI API Key - Optional, not used by default
# Get your API key from https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4o

# Google AI API Key - Optional, not used by default
# Get your API key from https://ai.google.dev/
# GOOGLE_GENAI_API_KEY=your_google_ai_api_key_here

# AWS API Keys (for deployment functionality)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=your_aws_region

# Next.js Environment
NODE_ENV=development 